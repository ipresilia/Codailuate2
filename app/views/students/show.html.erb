<div class="row">

  <div class="col-md-12">
    <div class="panel">
      <div class="panel-body">

        <div class="row">
          <div class="col-md-9">
            <h4>Full Name: <%= " #{@student.full_name}" %></h4>

            <div class="row">
              <div class="col-xs-6 col-md-3">
                <a href="#" class="thumbnail">
                  <%= image_tag @student.photo %>
                </a>
                <p><strong>Photo:</strong> <%= @student.photo %></p>
                <p><strong>Last Evaluation:</strong> <%= @student.last_evaluation %></p>
              </div>
            </div>

          </div>

          <div class="col-sm-1 left">
            <!-- <%= link_to "View", @student, class: "btn btn-danger" %> -->
            <%= link_to "Update", edit_student_path(@student), class: "btn btn-danger" %>
            <%= link_to "Delete", @student, class: "btn btn-danger", method: :delete, remote: true, data: { confirm: "Are you sure you want to delete this student?" } %>
          </div>
        </div>

        <h4>Evaluations</h4>
          <% @evaluations.each do |evaluation| %>
            <span class="label"><%= evaluation.color %></span>
          <% end %>


      </div>
    </div>

    <!-- <%= link_to "Add new student", new_student_path, class: "btn btn-danger" %> -->
  </div>
</div>
<%= link_to "Back", :back, class: "btn btn-danger" %>
